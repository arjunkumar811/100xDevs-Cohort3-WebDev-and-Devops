{
    "extends": "@repo/typescript-config/base.json",
     
    "compilerOptions": {
      "module": "ESNext",          // Use ESNext for the module system
      "moduleResolution": "nodenext", // Use node resolution for ES modules
      "target": "ESNext",          // Use the latest ECMAScript version
      "esModuleInterop": true,     // Ensure compatibility with commonjs modules
      "skipLibCheck": true,        // Skip checking type definitions
      "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  }
}
  